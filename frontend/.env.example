# Variables de entorno para desarrollo
# Copiar a .env.local en el directorio frontend/

# WebSocket URL (se generará después del despliegue)
NEXT_PUBLIC_WS_URL=wss://tu-websocket-api.execute-api.us-east-1.amazonaws.com/dev

# API Base URL 
NEXT_PUBLIC_API_URL=https://tu-api.execute-api.us-east-1.amazonaws.com

# Configuración de tiempo real
NEXT_PUBLIC_REALTIME_ENABLED=true
NEXT_PUBLIC_REALTIME_DEBUG=true

# Configuración de notificaciones
NEXT_PUBLIC_NOTIFICATIONS_ENABLED=true

# NOTE: Después del despliegue de serverless, reemplazar las URLs con las reales
# que aparecerán en los outputs del comando 'serverless deploy'