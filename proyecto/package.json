{
  "name": "sistema-gestion-espacios",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "dev": "serverless offline --stage dev",
    "setup": "chmod +x setup.sh && ./setup/setup.sh",
    "setup:win": "powershell -ExecutionPolicy Bypass -File ./setup/setup.ps1",
    
    "build:frontend": "cd ../frontend && npm ci && npm run build",
    "deploy:backend": "serverless deploy --stage $STAGE --region $REGION",
    "deploy:backend:win": "serverless deploy --stage %STAGE% --region %REGION%",
    "deploy:backend:ps": "powershell -Command \"$env:STAGE='dev'; $env:REGION='us-east-1'; serverless deploy --stage $env:STAGE --region $env:REGION\"",
    "deploy:backend:ps:prod": "powershell -Command \"$env:STAGE='prod'; $env:REGION='us-east-1'; serverless deploy --stage $env:STAGE --region $env:REGION\"",

    "deploy": "cross-env STAGE=dev REGION=us-east-1 npm run deploy:backend",
    "deploy:prod": "cross-env STAGE=prod REGION=us-east-1 npm run deploy:backend",
    "deploy:win": "set STAGE=dev && set REGION=us-east-1 && npm run deploy:backend:win",
    "deploy:prod:win": "set STAGE=prod && set REGION=us-east-1 && npm run deploy:backend:win",
    "deploy:ps": "npm run deploy:backend:ps",
    "deploy:ps:prod": "npm run deploy:backend:ps:prod",

    "deploy:quick": "serverless deploy --stage dev --region us-east-1",

    "remove": "serverless remove",
    "info": "serverless info --verbose",
    "logs:worker": "serverless logs -f queueWorker -t",
    "test": "node simulate-deploy.js",

    "seed": "node ./scripts/seed-dynamodb.js",
    "seed:ci": "npm ci && node ./scripts/seed-dynamodb.js --yes",
    "verify:plugins": "node -e \"console.log('Testing plugin configuration...')\" && serverless print --format text",
    "verify:dev": "cross-env STAGE=dev node serverless-plugins.js",
    "verify:prod": "cross-env STAGE=prod node serverless-plugins.js",
    "test:plugins": "node -e \"process.env.STAGE='dev'; console.log('Dev:', require('./serverless-plugins.js')); process.env.STAGE='prod'; delete require.cache[require.resolve('./serverless-plugins.js')]; console.log('Prod:', require('./serverless-plugins.js'))\"",
    "validate:logs": "node validate-secure-logs.js",
    "update:logs": "node update-logs.js"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "serverless": "^4.20.0", 
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-finch": "^4.0.4",
    "serverless-offline": "^14.3.0",
    "serverless-offline-sqs": "^8.0.0",
    "serverless-plugin-split-stacks": "^1.14.0",
    "serverless-scriptable-plugin": "^1.3.1"
  },
  "dependencies": {
    "@aws-sdk/client-apigatewaymanagementapi": "^3.600.0",
    "@aws-sdk/client-cloudwatch": "^3.600.0",
    "@aws-sdk/client-cognito-identity-provider": "^3.883.0",
    "@aws-sdk/client-dynamodb": "^3.600.0",
    "@aws-sdk/client-sns": "^3.888.0",
    "@aws-sdk/client-sqs": "^3.600.0",
    "@aws-sdk/lib-dynamodb": "^3.600.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "bcryptjs": "^2.4.3",
    "joi": "^17.11.0",
    "jose": "^4.14.4",
    "jsonwebtoken": "^9.0.2",
    "minimist": "^1.2.8",
    "uuid": "^9.0.1",
    "@sentry/serverless": "^7.120.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
