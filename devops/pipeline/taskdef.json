{
  "family": "sistema-gestion-espacios-monitor",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::<ACCOUNT_ID>:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::<ACCOUNT_ID>:role/espacios-monitor-task-role",
  "containerDefinitions": [
    {
      "name": "espacios-monitor",
      "image": "REPLACED_BY_CODEPIPELINE",
      "portMappings": [
        { 
          "containerPort": 3000, 
          "protocol": "tcp",
          "name": "http"
        }
      ],
      "essential": true,
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:3000/health || exit 1"],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 60
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/espacios-monitor",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "monitor",
          "awslogs-create-group": "true"
        }
      },
      "environment": [
        { 
          "name": "NODE_ENV", 
          "value": "production" 
        },
        { 
          "name": "PORT", 
          "value": "3000" 
        },
        { 
          "name": "API_BASE_URL", 
          "value": "https://api.sistema-espacios.com" 
        },
        { 
          "name": "FRONTEND_URL", 
          "value": "https://sistema-espacios.com" 
        },
        {
          "name": "DEVOPS_STATUS_URL",
          "value": "https://api.sistema-espacios.com/devops/status"
        },
        { 
          "name": "LOG_LEVEL", 
          "value": "info" 
        }
      ],
      "secrets": [
        {
          "name": "API_KEY",
          "valueFrom": "arn:aws:ssm:us-east-1:<ACCOUNT_ID>:parameter/espacios/monitor/api-key"
        }
      ],
      "mountPoints": [],
      "volumesFrom": [],
      "readonlyRootFilesystem": false,
      "privileged": false,
      "user": "espacios:nodejs",
      "workingDirectory": "/app",
      "linuxParameters": {
        "capabilities": {
          "drop": ["ALL"]
        },
        "initProcessEnabled": true
      },
      "stopTimeout": 30,
      "startTimeout": 120,
      "dependsOn": [],
      "links": [],
      "extraHosts": []
    }
  ],
  "volumes": [],
  "placementConstraints": [],
  "tags": [
    {
      "key": "Project",
      "value": "sistema-gestion-espacios"
    },
    {
      "key": "Service",
      "value": "monitoring"
    },
    {
      "key": "Environment",
      "value": "production"
    },
    {
      "key": "ManagedBy",
      "value": "devops"
    }
  ]
}
